TITLE=scrabble.sh
DATE=2011-06-21 06:27:46
POSTID=1209
CATEGORIES=computers-code;

    #!/bin/sh
    #DTPD#
    DICT=/usr/share/dict/words
    test "$1" || { cat "$0"; exit 1; }
    exec grep -i "$@" "$DICT" | less
    #
    # Useage:
    #   scrabble.sh PATTERN
    # Example:
    #   scrabble.sh '^a[lonrchl]\{4,7\}$'
